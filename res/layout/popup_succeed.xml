<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/bg_white">
    <RelativeLayout
        android:id="@+id/rl_title1"
        android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:layout_centerHorizontal="true"
	    android:layout_marginTop="20dp">
        <ImageView
            android:id="@+id/iv_submit_success"
            android:layout_width="wrap_content"
	   		android:layout_height="wrap_content"
	   		android:src="@drawable/submit_success"
	   		android:layout_centerVertical="true"/>
	    <TextView
	        android:layout_toRightOf="@id/iv_submit_success"
	        android:layout_width="wrap_content"
	   		android:layout_height="wrap_content"
	   		android:text="订单生成成功！"
	   		android:textSize="32sp"
	   		android:layout_marginLeft="10dp"
	   		android:layout_centerVertical="true"/>
	</RelativeLayout>
	
    <RelativeLayout
        android:id="@+id/rl_title2"
        android:layout_below="@id/rl_title1"
        android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:layout_centerHorizontal="true"
	    android:layout_marginTop="20dp">
	    <TextView
	        android:id="@+id/tv_second"
	        android:layout_width="wrap_content"
	   		android:layout_height="wrap_content"
	   		android:text="您的订单总价："
	   		android:textSize="28sp"/>
	    <TextView
	        android:id="@+id/tv_succeed_price"
	        android:layout_toRightOf="@id/tv_second"
	        android:layout_width="wrap_content"
	   		android:layout_height="wrap_content"
	   		android:textSize="28sp"
	   		android:textColor="@android:color/holo_red_dark"/>
    </RelativeLayout>
    
    <TextView
        android:id="@+id/tv_title3"
        android:layout_below="@id/rl_title2"
        android:layout_width="wrap_content"
   		android:layout_height="wrap_content"
   		android:text="我们已经收到您的订单信息"
   		android:textSize="28sp"
   		android:layout_marginTop="15dp"
   		android:layout_centerHorizontal="true"/>
    
    <TextView
        android:id="@+id/tv_title4"
        android:layout_below="@id/tv_title3"
        android:layout_width="wrap_content"
   		android:layout_height="wrap_content"
   		android:text="请凭手机号找店员结算"
   		android:textSize="28sp"
   		android:layout_marginTop="15dp"
   		android:layout_centerHorizontal="true"/>
    
    <TextView
        android:layout_below="@id/tv_title4"
	    android:id="@+id/tv_goout"
	    android:layout_width="330dp"
	    android:layout_height="55dp"
	    android:layout_centerHorizontal="true"
	    android:background="#D11735"
	    android:textColor="@android:color/white"
	    android:layout_marginTop="5dp"
	    android:textSize="28sp"
	    android:gravity="center"
	    android:text="继续逛"/>
</RelativeLayout>
