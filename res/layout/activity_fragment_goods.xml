<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >
	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="80dp"
	    android:background="#FFFFFF">
	    
	    <RelativeLayout
	        android:id="@+id/rl_Menulist"
	        android:layout_width="wrap_content"
		    android:layout_height="80dp">
		    <TextView
		        android:id="@+id/tv_fenlei"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="全部分类"
		        android:textSize="30sp"
		        android:layout_centerVertical="true"
		        android:layout_marginLeft="50dp"/>
		    <ImageView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:src="@drawable/btn_subnav"
		        android:layout_marginLeft="15dp"
		        android:layout_centerVertical="true"
		        android:layout_toRightOf="@+id/tv_fenlei"/>
	    </RelativeLayout>
	    
	    <RelativeLayout
	        android:id="@+id/rl_backAllMenu"
	        android:layout_width="wrap_content"
		    android:layout_height="80dp"
		    android:layout_toRightOf="@+id/rl_Menulist"
		    android:visibility="invisible">
		    <ImageView
		        android:id="@+id/iv_backAllmenu"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:src="@drawable/back1"
		        android:layout_marginLeft="40dp"
		        android:layout_centerVertical="true"/>
		    <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="全部分类"
		        android:textSize="30sp"
		        android:layout_marginLeft="5dp"
		        android:layout_centerVertical="true"
		        android:layout_toRightOf="@+id/iv_backAllmenu"/>
        </RelativeLayout>
	    <RelativeLayout
	        android:layout_width="wrap_content"
		    android:layout_height="50dp"
		    android:layout_centerVertical="true"
		    android:layout_alignParentRight="true">
		    
	        <RelativeLayout
		        android:id="@+id/rl_button_default"
		        android:layout_width="150dp"
			    android:layout_height="50dp"
			    android:layout_centerVertical="true"
			    android:layout_toLeftOf="@+id/rl_button_sales"
		        android:background="@color/button_onclick">
			    <TextView
			        android:id="@+id/button_default"
			        android:layout_width="150dp"
			        android:layout_height="50dp"
			        android:text="默认"
			        android:textSize="23sp"
			        android:gravity="center"
			        android:layout_centerInParent="true"/>
		    </RelativeLayout>
		    <RelativeLayout
		        android:id="@+id/rl_button_sales"
		        android:layout_width="150dp"
			    android:layout_height="50dp"
			    android:layout_centerVertical="true"
			    android:layout_toLeftOf="@+id/rl_button_price"
		        android:background="@drawable/textview_shape">
			    
		        <RelativeLayout
			        android:layout_width="wrap_content"
				    android:layout_height="50dp"
				    android:layout_centerInParent="true">
				    <TextView
				        android:id="@+id/button_sales"
				        android:layout_width="wrap_content"
				        android:layout_height="50dp"
				        android:text="销量"
				        android:textSize="23sp"
				        android:gravity="center"
				        android:layout_centerVertical="true"/>
				    <TextView
				        android:id="@+id/tv_pic_sales"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_centerVertical="true"
				        android:background="@drawable/filter_sales_unfocus"
				        android:layout_toRightOf="@id/button_sales"
				        android:layout_marginLeft="5dp"/>
			    </RelativeLayout>
		    </RelativeLayout>
		    <RelativeLayout
		        android:id="@+id/rl_button_price"
		        android:layout_width="150dp"
			    android:layout_height="50dp"
			    android:layout_centerVertical="true"
		        android:layout_alignParentRight="true"
		        android:layout_marginRight="20dp"
		        android:background="@drawable/textview_shape">
		        
		        <RelativeLayout
			        android:layout_width="wrap_content"
				    android:layout_height="50dp"
				    android:layout_centerInParent="true">
				    <TextView
				        android:id="@+id/button_price"
				        android:layout_width="wrap_content"
				        android:layout_height="50dp"
				        android:text="价格"
				        android:textSize="23sp"
				        android:gravity="center"/>
				    <RelativeLayout
				        android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:layout_centerVertical="true"
					    android:layout_toRightOf="@id/button_price">
					    <TextView
					        android:id="@+id/tv_pic_ascprice"
					        android:layout_width="wrap_content"
					        android:layout_height="10dp"
					        android:background="@drawable/filter_price_asc_unfocus"
					        android:layout_marginLeft="5dp"/>
					    <TextView
					        android:id="@+id/tv_pic_descprice"
					        android:layout_width="wrap_content"
					        android:layout_height="10dp"
					        android:background="@drawable/filter_price_desc_unfocus"
					        android:layout_below="@id/tv_pic_ascprice"
					        android:layout_marginTop="1dp"
					        android:layout_marginLeft="5dp"/>
			 	    </RelativeLayout>
		 	    </RelativeLayout> 
			</RelativeLayout>
	    </RelativeLayout>
	</RelativeLayout>
	<View
        android:id="@+id/detail_first_div_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/div_gray"/>
	
	<HorizontalScrollView  
	    android:id="@+id/hs_menu_grands"
        android:layout_width="fill_parent"  
        android:layout_height="60dp"  
        android:layout_gravity="center_vertical"  
        android:background="@color/bg_white"
        android:visibility="gone"
        android:scrollbars="none" >  
		<LinearLayout
	        android:id="@+id/ll_menu_grands"
	        android:layout_width="wrap_content"
	   		android:layout_height="60dp"
	   		android:orientation="horizontal"
	   		android:background="@color/bg_white">
	    </LinearLayout>
    </HorizontalScrollView>
    
	<RelativeLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content">
	    
	    <View
	        android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#F4F4F4"/>
	    <com.handmark.pulltorefresh.library.PullToRefreshGridView
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:layout_marginTop="5dp"
	        android:id="@+id/gv"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:numColumns="5"
	        android:scrollbars = "none"
	        android:verticalSpacing="5dp"          
			android:horizontalSpacing="5dp"  
			android:listSelector="#00000000">
	    </com.handmark.pulltorefresh.library.PullToRefreshGridView>
	    <View
            android:id="@+id/detail_first_darkview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#2E2E2E"
            android:alpha="0.7"
            android:visibility="gone" />
	</RelativeLayout> 
</LinearLayout>
